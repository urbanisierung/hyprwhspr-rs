{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "anthropic": {
      "options": {
        "headers": {
          "anthropic-beta": "context-1m-2025-08-07"
        }
      },
      "models": {
        "claude-haiku-4-5": {
          "id": "claude-haiku-4-5",
          "name": "$ claude-haiku-4-5",
          "limit": {
            "context": 1000000,
            "output": 64000,
          },
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000,
            }
          }
        },
        "claude-sonnet-4-5": {
          "id": "claude-sonnet-4-5",
          "name": "$ claude-sonnet-4-5",
          "limit": {
            "context": 1000000,
            "output": 64000,
          },
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 32000,
            }
          }
        },
        "claude-opus-4-5": {
          "id": "claude-opus-4-5",
          "name": "$ claude-opus-4-5",
          "options": {
            "thinking": {
              "type": "disabled",
            }
          }
        }
      }
    },
    "azure": {
      "models": {
        "gpt-5.1-codex-max-xhigh": {
          "id": "gpt-5.1-codex-max",
          "options": {
            "reasoningEffort": "xhigh",
            "reasoningSummary": "detailed",
            "include": [
              "reasoning.encrypted_content"
            ]
          }
        },
        "gpt-5.1-high": {
          "id": "gpt-5.1",
          "options": {
            "reasoningEffort": "high",
            "reasoningSummary": "detailed",
            "include": [
              "reasoning.encrypted_content"
            ]
          }
        }
      }
    }
  },
  "mcp": {
    "jina": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.jina.ai/sse",
      "headers": {
        "Authorization": "Bearer {env:JINA_API_KEY}"
      }
    }
  },
  "agent": {
    "build": {
      "model": "anthropic/claude-opus-4-5",
      "tools": {
        "jina_read_url": true,
        "jina_search_web": true,
        "jina_parallel_search_web": true,
        "jina_*": false,
      }
    },
  }
}
